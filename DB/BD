UPDATE cart c
INNER JOIN product p ON c.id_product = p.id_product
SET c.total_quantity = p.stock
WHERE c.total_quantity > p.stock 
AND p.stock > 0
AND c.id_user = (SELECT id_user 
                  FROM user 
                  WHERE username = sdfdsfd);


DELETE c
FROM cart c
INNER JOIN product p ON c.id_product = p.id_product
WHERE p.stock = 0
AND c.id_user = (SELECT id_user 
                  FROM user 
                  WHERE username =sdfsdfds);
